@model CombPost
@inject UserManager<BestUser> UserManager
@inject ICampaings Campaings
@{
    ViewData["Title"] = "Create";
    IEnumerable<Campaing> campaings = Campaings.GetCampaingsByUserId(UserManager.GetUserId(User));
}

<h1>Create</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BestUser.Id" value="@UserManager.GetUserId(User)" />
            <div class="form-group">
                <label asp-for="Post.Id" class="control-label"></label>
                <input asp-for="Post.Id" class="form-control" />
                <span asp-validation-for="Post.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Name" class="control-label"></label>
                <input asp-for="Post.Name" class="form-control" />
                <span asp-validation-for="Post.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.text" class="control-label"></label>
                <input asp-for="Post.text" class="form-control" />
                <span asp-validation-for="Post.text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.mintext" class="control-label"></label>
                <input asp-for="Post.mintext" class="form-control" />
                <span asp-validation-for="Post.mintext" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.Campaing" class="control-label"></label>
                <select class="custom-select" asp-for="Campaing.Id" required>
                    @foreach (var campaing in campaings)
                    {
                        <option value="@campaing.Id">@campaing.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
