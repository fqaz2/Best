@model Post
@inject UserManager<BestUser> UserManager
@inject ICampaigns _campaigns
@{
    ViewData["Title"] = "Edit";
    IEnumerable<Campaign> Campaigns = _campaigns.GetCampaignsByUserId(UserManager.GetUserId(User));
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="BestUser.Id" />
            <input type="hidden" asp-for="Img" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mintext" class="control-label"></label>
                <textarea asp-for="mintext" id="mintext" onchange="addInMarkdown('mark1','mintext')" class="form-control"></textarea>
                <span asp-validation-for="mintext" class="text-danger"></span>
                <markdown id="mark1" />
            </div>
            <div class="form-group">
                <label asp-for="text" class="control-label"></label>
                <textarea asp-for="text" id="text" onchange="addInMarkdown('mark2','text')" class="form-control"></textarea>
                <span asp-validation-for="text" class="text-danger"></span>
                <markdown id="mark2" />
            </div>
            <div class="form-group">
                <label asp-for="Campaign" class="control-label"></label>
                <select class="custom-select" asp-for="Campaign.Id" required>
                    @foreach (var Campaign in Campaigns)
                    {
                        <option value="@Campaign.Id">@Campaign.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Avatar</label>
                <input asp-for="ImgFile" class="btn btn-primary" accept="image/*" />
                <span asp-validation-for="ImgFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <partial name="/Views/Img/IndexPostImg.cshtml" model="@Model" />
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
