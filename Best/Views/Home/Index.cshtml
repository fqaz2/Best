@model IEnumerable<ObjectTime>
@{
    ViewData["Title"] = "Home Page";
}
@inject ICampaigns _campaigns
<div class="card-columns">
    @foreach (var item in Model)
    {
        if (item.TypeObj == new Campaign().GetType())
        {

            Campaign campaign = (Campaign)item.Obj;
            <div class="card bg-light">
                <div class="card-header text-center"><h4>@campaign.Name</h4></div>
                @if (campaign.Img != null)
                {
                    <img class="img-fluid" src="@await _dropbox.getImgByUrl(campaign.Img)" alt="Card image cap">
                }

                <div class="card-body">
                    <h5 class="card-title text-warning">
                        @for (int i = 0; i < 5; i++)
                        {
                            if (i <= await _campaigns.Rating(campaign.Id))
                            {
                                <svg class="rating" id="@i" data-id="@campaign.Id" onclick="Rait(this)" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                </svg>
                            }
                            else
                            {
                                <svg class="rating" id="@i" data-id="@campaign.Id" onclick="Rait(this)" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M2.866 14.85c-.078.444.36.791.746.593l4.39-2.256 4.389 2.256c.386.198.824-.149.746-.592l-.83-4.73 3.522-3.356c.33-.314.16-.888-.282-.95l-4.898-.696L8.465.792a.513.513 0 0 0-.927 0L5.354 5.12l-4.898.696c-.441.062-.612.636-.283.95l3.523 3.356-.83 4.73zm4.905-2.767-3.686 1.894.694-3.957a.565.565 0 0 0-.163-.505L1.71 6.745l4.052-.576a.525.525 0 0 0 .393-.288L8 2.223l1.847 3.658a.525.525 0 0 0 .393.288l4.052.575-2.906 2.77a.565.565 0 0 0-.163.506l.694 3.957-3.686-1.894a.503.503 0 0 0-.461 0z" />
                                </svg>
                            }
                            <script language="javascript">
                function Rait(t){
                        console.log("clicked");
                        $.ajax({
                            type: "POST",
                            url: "/Campaigns/CampaignRating",
                            data: {
                                "CampaignId": $(t).attr("data-id"),
                                "UserId": "@UserManager.GetUserId(User)",
                                "Rating": $(t).attr("id")
                            }
                        }).done((res) => {
                            if (res) {
                                $(t).removeClass("bi bi-heart-fill")
                                $(t).addClass("bi bi-heart")
                            }
                            else {
                                $(t).removeClass("bi bi-heart")
                                $(t).addClass("bi bi-heart-fill")
                            }
                        });
                        return false;
                        }
                            </script>
                        }

                    </h5>
                    @if (campaign.Topic != null)
                    {
                        <a class="btn btn-primary btn-sm" href="#" role="button"> @campaign.Topic.Name </a>
                    }
                    <p class="card-text">@campaign.shortText</p>
                </div>
                <div class="card-footer">
                    <p class="d-flex flex-column justify-content-end" style="margin-bottom: 0px;">
                        <a asp-controller="Campaigns" asp-action="Details" asp-route-id="@campaign.Id" class="btn btn-primary align-self-end">Подробнее</a>
                        <small class="text-muted text-right">@campaign.createData</small>
                    </p>
                </div>
            </div>
        }
        else
        {
            Post post = (Post)item.Obj;
            <div class="card bg-light">
                <div class="card-header text-center"><h4>@post.Name</h4></div>
                @if (@post.Img != null)
                {
                    <img class="img-fluid" src="@await _dropbox.getImgByUrl(post.Img)" alt="Card image cap">
                }
                <div class="card-body">
                    <h5 class="card-title">
                        sdfg
                    </h5>
                    <p class="card-text">@Html.DisplayFor(p => post.mintext)</p>
                </div>
                <div class="card-footer">
                    <p class="d-flex justify-content-end" style="margin-bottom: 0px;">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (post.Likes.Any(l => l.BestUserId == UserManager.GetUserId(User)))
                            {
                                <button type="button" class="btn btn-primary" data-id="@post.Id" onclick="like_func(this)">
                                    @post.Likes.Count()
                                    <svg id="like" data-id="@post.Id" onclick="like_func(this)" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                                    </svg>
                                </button>

                            }
                            else
                            {
                                <button type="button" class="btn btn-primary" data-id="@post.Id" onclick="like_func(this)">
                                    @post.Likes.Count()
                                    <svg id="like" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                        <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                                    </svg>
                                </button>
                            }
                            <script language="javascript">
                        const like_func = (t) => {
                        console.log("clicked");
                        $.ajax({
                            type: "POST",
                            url: "/Posts/LikePost",
                            data: {
                                "PostId": $(t).attr("data-id"),
                                "UserId": "@UserManager.GetUserId(User)"
                            }
                        }).done((res) => {
                            if (res) {
                                $("#like").removeClass("bi bi-heart-fill")
                                $("#like").addClass("bi bi-heart")
                                $("#like").html("<path fill-rule='evenodd' d='M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z' />")
                            }
                            else {
                                $("#like").removeClass("bi bi-heart")
                                $("#like").addClass("bi bi-heart-fill")
                                $("#like").html("<path d='m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z' />")
                            }
                        });
                        return false;
                        }
                            </script>
                        }
                        <a asp-controller="Posts" asp-action="Details" asp-route-id="@post.Id" class="btn btn-primary align-self-end">Подробнее</a>

                    </p>
                    <p class="d-flex justify-content-end" style="margin-bottom:0px;">
                        <small class="text-muted text-right">@post.createData</small>
                    </p>
                </div>
            </div>
        }
    }
</div>